<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!-- interface-requires gtk+ 3.0 -->
  <object class="GtkActionGroup" id="edit-actiongroup">
    <child>
      <object class="GtkAction" id="undo-action">
        <property name="stock_id">gtk-undo</property>
        <signal name="activate" handler="widgets_main_window_on_undo" swapped="no"/>
      </object>
      <accelerator key="z" modifiers="GDK_CONTROL_MASK"/>
    </child>
    <child>
      <object class="GtkAction" id="redo-action">
        <property name="stock_id">gtk-redo</property>
        <signal name="activate" handler="widgets_main_window_on_redo" swapped="no"/>
      </object>
      <accelerator key="z" modifiers="GDK_SHIFT_MASK | GDK_CONTROL_MASK"/>
    </child>
    <child>
      <object class="GtkAction" id="edit-action">
        <property name="stock_id">gtk-edit</property>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="preferences-action">
        <property name="stock_id">gtk-preferences</property>
        <signal name="activate" handler="widgets_main_window_on_preferences" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="cut-action">
        <property name="stock_id">gtk-cut</property>
        <signal name="activate" handler="widgets_main_window_on_cut" swapped="no"/>
      </object>
      <accelerator key="x" modifiers="GDK_CONTROL_MASK"/>
    </child>
    <child>
      <object class="GtkAction" id="copy-action">
        <property name="stock_id">gtk-copy</property>
        <signal name="activate" handler="widgets_main_window_on_copy" swapped="no"/>
      </object>
      <accelerator key="c" modifiers="GDK_CONTROL_MASK"/>
    </child>
    <child>
      <object class="GtkAction" id="paste-action">
        <property name="stock_id">gtk-paste</property>
        <signal name="activate" handler="widgets_main_window_on_paste" swapped="no"/>
      </object>
      <accelerator key="v" modifiers="GDK_CONTROL_MASK"/>
    </child>
  </object>
  <object class="GtkActionGroup" id="file-actiongroup">
    <property name="name">file-actiongroup</property>
    <child>
      <object class="GtkAction" id="new-action">
        <property name="stock_id">gtk-new</property>
        <signal name="activate" handler="widgets_main_window_on_new" swapped="no"/>
      </object>
      <accelerator key="n" modifiers="GDK_CONTROL_MASK"/>
    </child>
    <child>
      <object class="GtkAction" id="open-action">
        <property name="stock_id">gtk-open</property>
        <signal name="activate" handler="widgets_main_window_on_open" swapped="no"/>
      </object>
      <accelerator key="o" modifiers="GDK_CONTROL_MASK"/>
    </child>
    <child>
      <object class="GtkAction" id="save-action">
        <property name="stock_id">gtk-save</property>
        <signal name="activate" handler="widgets_main_window_on_save" swapped="no"/>
      </object>
      <accelerator key="s" modifiers="GDK_CONTROL_MASK"/>
    </child>
    <child>
      <object class="GtkAction" id="quit-action">
        <property name="stock_id">gtk-quit</property>
        <signal name="activate" handler="widgets_main_window_on_quit" swapped="no"/>
      </object>
      <accelerator key="q" modifiers="GDK_CONTROL_MASK"/>
    </child>
    <child>
      <object class="GtkAction" id="file-action">
        <property name="stock_id">gtk-file</property>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="save-as-action">
        <property name="stock_id">gtk-save-as</property>
        <signal name="activate" handler="widgets_main_window_on_save_as" swapped="no"/>
      </object>
    </child>
  </object>
  <object class="GtkActionGroup" id="help-actiongroup">
    <child>
      <object class="GtkAction" id="about-action">
        <property name="stock_id">gtk-about</property>
        <signal name="activate" handler="widgets_main_window_on_about" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="help-action">
        <property name="stock_id">gtk-help</property>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="help-contents-action">
        <property name="label" translatable="yes">_Contents</property>
        <property name="stock_id">help-contents</property>
        <signal name="activate" handler="widgets_main_window_on_help_contents" swapped="no"/>
      </object>
      <accelerator key="F1"/>
    </child>
  </object>
  <object class="GtkActionGroup" id="paint-actiongroup">
    <child>
      <object class="GtkRadioAction" id="pencil-action">
        <property name="label" translatable="yes">Pencil(_p)</property>
        <property name="tooltip" translatable="yes">Draw pixels freehand</property>
        <property name="icon_name">draw-freehand</property>
        <property name="active">True</property>
        <signal name="changed" handler="widgets_main_window_on_tool_change" swapped="no"/>
      </object>
      <accelerator key="p"/>
    </child>
    <child>
      <object class="GtkRadioAction" id="eraser-action">
        <property name="short_label" translatable="yes">Eraser(e)</property>
        <property name="tooltip" translatable="yes">Erase pixels back to transparent</property>
        <property name="icon_name">draw-eraser</property>
        <property name="value">1</property>
        <property name="group">pencil-action</property>
        <property name="current_value">1</property>
        <signal name="changed" handler="widgets_main_window_on_tool_change" swapped="no"/>
      </object>
      <accelerator key="e"/>
    </child>
    <child>
      <object class="GtkRadioAction" id="fill-action">
        <property name="label" translatable="yes">Bucket Fill(f)</property>
        <property name="tooltip" translatable="yes">Fill closed areas with color</property>
        <property name="icon_name">color-fill</property>
        <property name="value">2</property>
        <property name="group">pencil-action</property>
        <property name="current_value">2</property>
        <signal name="changed" handler="widgets_main_window_on_tool_change" swapped="no"/>
      </object>
      <accelerator key="f"/>
    </child>
    <child>
      <object class="GtkRadioAction" id="color-pick-action">
        <property name="label" translatable="yes">Color Picker(c)</property>
        <property name="tooltip" translatable="yes">Pick a color from the image</property>
        <property name="icon_name">color-picker</property>
        <property name="value">3</property>
        <property name="group">pencil-action</property>
        <property name="current_value">3</property>
        <signal name="changed" handler="widgets_main_window_on_tool_change" swapped="no"/>
      </object>
      <accelerator key="c"/>
    </child>
  </object>
  <object class="GtkActionGroup" id="select-actiongroup">
    <child>
      <object class="GtkRadioAction" id="select-rectangle-action">
        <property name="label" translatable="yes">Rectangular Selection(Shift+R)</property>
        <property name="tooltip" translatable="yes">Select a rectangular region</property>
        <property name="icon_name">select-rectangular</property>
        <property name="group">pencil-action</property>
        <signal name="changed" handler="widgets_main_window_on_tool_change" swapped="no"/>
      </object>
      <accelerator key="r" modifiers="GDK_SHIFT_MASK"/>
    </child>
  </object>
  <object class="GtkActionGroup" id="view-actiongroup">
    <child>
      <object class="GtkAction" id="view-action">
        <property name="label" translatable="yes">_View</property>
      </object>
    </child>
    <child>
      <object class="GtkToggleAction" id="toolbar-action">
        <property name="label" translatable="yes">_Toolbar</property>
        <property name="active">True</property>
        <signal name="toggled" handler="widgets_main_window_on_toolbar_toggle" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkToggleAction" id="statusbar-action">
        <property name="label" translatable="yes">_Status Bar</property>
        <property name="active">True</property>
        <signal name="toggled" handler="widgets_main_window_on_statusbar_toggle" swapped="no"/>
      </object>
    </child>
  </object>
  <object class="GtkWindow" id="main-window">
    <property name="width_request">320</property>
    <property name="height_request">20</property>
    <property name="can_focus">False</property>
    <property name="title" translatable="yes">Sprite Hut</property>
    <property name="default_width">640</property>
    <property name="default_height">480</property>
    <property name="icon_name">spritehut</property>
    <property name="has_resize_grip">False</property>
    <property name="startup_id">Sprite Hut</property>
    <signal name="delete-event" handler="widgets_main_window_on_quit" swapped="no"/>
    <child>
      <object class="GtkBox" id="main-box">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkStatusbar" id="main-statusbar">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="spacing">2</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="pack_type">end</property>
            <property name="position">1</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
</interface>
